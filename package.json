{
  "name": "nexphys-backend",
  "version": "1.0.0",
  "description": "nexphys Multi-Tenant Fitness Platform Backend with Tenant-Per-Schema Architecture",
  "main": "dist/server.js",
  "scripts": {
    "# Uygulama": "-------------------------------------------",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --ignore 'src/**/*.spec.ts' --ignore 'src/**/*.test.ts' --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev:debug": "nodemon --exec ts-node --inspect -r tsconfig-paths/register src/server.ts",
    
    "# Test": "-------------------------------------------",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./tests/jest-e2e.json",
    "test:api": "ts-node -r tsconfig-paths/register src/scripts/seed-test-users.ts && ts-node -r tsconfig-paths/register src/scripts/test-api.ts",
    "test:users": "ts-node -r tsconfig-paths/register src/scripts/test-users-module.ts",
    
    "# Veritabanı (Genel)": "-------------------------------------------",
    "db:create-tables": "ts-node -r tsconfig-paths/register src/shared/database/migrations/create-migrations.ts",
    
    "# Veritabanı (Public Schema)": "-------------------------------------------",
    "db:migration:generate:public": "typeorm-ts-node-commonjs migration:generate -d src/shared/database/config/public-connection.ts",
    "db:migration:run:public": "typeorm-ts-node-commonjs migration:run -d src/shared/database/config/public-connection.ts",
    "db:migration:revert:public": "typeorm-ts-node-commonjs migration:revert -d src/shared/database/config/public-connection.ts",
    "db:seed:public": "ts-node -r tsconfig-paths/register src/shared/database/seeds/public/index.ts",
    
    "# Veritabanı (Tenant Schema)": "-------------------------------------------",
    "db:migration:generate:tenant": "typeorm-ts-node-commonjs migration:generate -d src/shared/database/config/tenant-connection.ts",
    "db:migration:run:tenant": "typeorm-ts-node-commonjs migration:run -d src/shared/database/config/tenant-connection.ts",
    "db:migration:revert:tenant": "typeorm-ts-node-commonjs migration:revert -d src/shared/database/config/tenant-connection.ts",
    "db:seed:tenant": "ts-node -r tsconfig-paths/register src/shared/database/seeds/tenant/index.ts",
    "db:seed:tenant:specific": "ts-node -r tsconfig-paths/register src/shared/database/seeds/tenant/index.ts",
    
    "# NexPhys Özel Komutlar": "-------------------------------------------",
    "nexphys:seed:public": "typeorm-ts-node-commonjs migration:run -d src/shared/database/config/public-connection.ts --name=SeedAdminUsers",
    "nexphys:seed:tenants": "ts-node -r tsconfig-paths/register src/scripts/seed-tenant-users.ts",
    "nexphys:seed:tenant": "ts-node -r tsconfig-paths/register src/scripts/seed-tenant-users.ts",
    "nexphys:seed:test-users": "ts-node -r tsconfig-paths/register scripts/run-test-users-seed.ts",
    "nexphys:create-tenant": "ts-node -r tsconfig-paths/register src/scripts/create-tenant.ts",
    
    "# Kurulum ve Demo": "-------------------------------------------",
    "setup:db": "npm run db:create-tables && npm run db:seed:public && npm run db:seed:tenant",
    "setup:nexphys-env": "ts-node -r tsconfig-paths/register src/scripts/setup-nexphys-environment.ts",
    "demo:setup": "npm run setup:nexphys-env",
    "demo:reset": "npm run demo:setup",
    
    "# Geliştirme Araçları": "-------------------------------------------",
    "swagger:generate": "ts-node -r tsconfig-paths/register src/scripts/generate-swagger.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    
    "# Docker": "-------------------------------------------",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.10",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.15.1",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "fitness",
    "multi-tenant",
    "api",
    "express",
    "typescript",
    "typeorm",
    "postgresql",
    "rbac",
    "tenant-per-schema"
  ],
  "author": "nexphys Team",
  "license": "MIT"
}
